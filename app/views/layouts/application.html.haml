!!! 5
%html
  %head
    %title
      = yield :title
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults
    = csrf_meta_tag

  %body
    #header
      = image_tag('RRR-logo-2.jpg')

    #nav
      %ul
        - %w(etusivu yhteystiedot).each do |name|
          %li= link_to(name.capitalize, '/' + name)
        - if current_user
          %li= link_to('Sign out', destroy_user_session_path)

    - if notice || alert
      #notices
        %p.notice
          = notice
          %p.alert
            = alert

    = yield
	