= form_for @page do |f|
  -if @page.errors.any?
    #errorExplanation
      %h2= "#{pluralize(@page.errors.count, "error")} prohibited this page from being saved:"
      %ul
        - @page.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :short_name
    = f.text_field :short_name
  .field
    = f.label :order
    = f.text_field :order
  .field
    = f.label :body
    = f.text_area :body
  .actions
    = f.submit 'Save'
